<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/scan_IV" />

    <EditText
        android:id="@+id/tagNumber_scan"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/scan_IV"
        android:textSize="18dp"
        android:hint="Tag number"
        android:paddingStart="20dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/medium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_background"
        />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/image_upload"
        android:id="@+id/imageUpload"
        android:src="@drawable/ic_upload_img"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tagNumber_scan"/>

    <EditText
        android:id="@+id/breed"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageUpload"
        android:textSize="18dp"
        android:hint="Breed"
        android:paddingStart="20dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/medium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_background"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/breed"
        android:textSize="18dp"
        android:hint="Weight"
        android:paddingStart="20dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/medium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_background"
        />

    <EditText
        android:id="@+id/age"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/weight"
        android:textSize="18dp"
        android:hint="Age"
        android:paddingStart="20dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/medium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_background"
        />

    <EditText
        android:id="@+id/relation"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/age"
        android:textSize="18dp"
        android:hint="Relation to"
        android:paddingStart="20dp"
        android:textColor="@color/colorText"
        android:fontFamily="@font/medium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/relation">

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="scanBtnStart"
            android:layout_weight="1"
            android:text="Scan"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorText"
            android:background="@drawable/rounded_background"/>

        <androidx.legacy.widget.Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/detect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorText"
            android:text="Detect"
            android:background="@drawable/rounded_background"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>