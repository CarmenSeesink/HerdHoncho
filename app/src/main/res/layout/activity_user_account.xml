<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herd Honcho"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:fontFamily="@font/medium"
        android:layout_alignParentLeft="false" />

    <TextView
        android:id="@+id/welcomeMessage_TV"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:lines="2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:layout_alignTop="@id/app_name"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:fontFamily="@font/bold"
        android:layout_alignParentLeft="false"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/addEmployee_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_btn_blue"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Add employee status"
        android:layout_above="@id/updatePassword_btn"/>

    <Button
        android:id="@+id/updatePassword_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_background"
        android:textColor="@color/colorText"
        android:text="Update password"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/updateEmail_btn"/>

    <Button
        android:id="@+id/updateEmail_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_background"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Update email"
        android:layout_above="@id/logout_btn"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_background"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Logout"
        android:layout_above="@id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>